    "_exporter_id": "38332711"
  },
  "item": [
    {
      "name": "1) Generate New Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{stgBaseUrl}}/api/v2/users/generate-token-for-interview-task",
          "host": [
            "{{stgBaseUrl}}"
          ],
          "path": [
            "api",
            "v2",
            "users",
            "generate-token-for-interview-task"
          ]
        }
      },
      "response": []
    },
    {
      "name": "3) Update Bank Info (API #2)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Referer",
            "value": "https://stg-business.bosta.co/"
          },
          {
            "key": "x-device-id",
            "value": "{{deviceId}}"
          },
          {
            "key": "X-DEVICE-FINGERPRINT",
            "value": "{{deviceFingerprint}}"
          },
          {
            "key": "Accept-Language",
            "value": "en"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankInfo\": {\n    \"beneficiaryName\": \"test name\",\n    \"bankName\": \"NBG - National Bank of Egypt\",\n    \"accountNumber\": \"123\",\n    \"ibanNumber\": \"EG1234567890123456789012\"\n  },\n  \"paymentInfoOtp\": \"{{paymentOtp}}\"\n}"
        },
        "url": {
          "raw": "{{stgBaseUrl}}/api/v2/businesses/add-bank-info",
          "host": [
            "{{stgBaseUrl}}"
          ],
          "path": [
            "api",
            "v2",
            "businesses",
            "add-bank-info"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "stgBaseUrl",
      "value": "https://stg-app.bosta.co",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "PASTE_NEW_TOKEN_HERE",
